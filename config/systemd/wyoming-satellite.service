[Unit]
Description=Wyoming Satellite Voice Assistant
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/wyoming-satellite
Environment="PATH=/home/pi/wyoming-satellite/venv/bin:/usr/bin:/bin"
ExecStart=/home/pi/wyoming-satellite/venv/bin/python3 -m wyoming_satellite
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
