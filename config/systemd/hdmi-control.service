[Unit]
Description=HDMI Control with Screen Blanking
After=network.target graphical.target
Wants=graphical.target

[Service]
Type=simple
User=pi
Environment="DISPLAY=:0"
Environment="XAUTHORITY=/home/pi/.Xauthority"
WorkingDirectory=/home/pi/ha-display
ExecStart=/usr/bin/python3 /home/pi/ha-display/hdmi_control.py
Restart=always
RestartSec=10

[Install]
WantedBy=graphical.target
